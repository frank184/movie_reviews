<div class="panel">
  <div class="panel-body">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <%= render 'form' %>
    <h3 class="text-center">Cancel my account</h3>
    <p class="text-center">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-default btn-lg center-block' %></p>
  </div>

  <div class="panel-footer">
    <%= link_to "Back", :back %>
  </div>
</div>
