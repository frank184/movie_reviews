<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-6">
        <%= image_tag @movie.image.url(:medium) %>
      </div>
      <div class="col-lg-6">
        <h3>Review <%= @movie.title %></h3>
        <%= render 'form' %>
      </div>
    </div>
  </div>
  <div class="panel-footer">
    <%= link_to 'Back', movie_path(@movie) %>
  </div>
</div>
