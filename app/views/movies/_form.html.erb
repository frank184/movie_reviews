    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :length %><br>
    <%= f.text_field :length, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :director %><br>
    <%= f.text_field :director, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :rating %><br>
    <%= f.text_field :rating, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: '' %>
  </div>
  <div class="form-group">
    <%= f.submit "Upload New Movie", class: 'btn btn-primary btn-lg clearfix' %>
  </div>
<% end %>
