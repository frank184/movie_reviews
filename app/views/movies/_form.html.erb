      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if !@movie.image.nil? %>
    <%= image_tag @movie.image.url(:medium), id: 'movie_img' %>
  <% end %>
